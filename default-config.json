{
  "dictionaries": [
    "./dictionaries/en_US-tech-industry.dic",
    "./dictionaries/bigcommerce.dic"
  ],
  "rules": {
    "retext-equality": {
      "severity": "warning"
    },
    "retext-readability": {
      "age": 18,
      "minWords": 10,
      "severity": "warning"
    },
    "retext-simplify": {
      "severity": "warning"
    },
    "rule-style": {
      "severity": "fatal"
    },
    "retext-spell": {
      "severity": "fatal"
    },
    "weasel": {
      "severity": "fatal"
    },
    "remark-lint-write-good": {
      "severity": "fatal"
    }
  },
  "ignore": [
    "address",
    "with",
    "attempt",
    "capability",
    "combined",
    "contains",
    "effect",
    "expiration",
    "function",
    "host",
    "hosts",
    "initial",
    "minimize",
    "minimum",
    "multiple",
    "option",
    "previous",
    "render",
    "request",
    "require",
    "requires",
    "submit",
    "transmit",
    "try",
    "type"
  ]
}